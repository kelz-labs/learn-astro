---
import { Heading } from "@/components/ui/typography";
import Layout from "@/layouts/Layout.astro";
import { data } from "@/lib/utils";
---

<html>
  <head>
    <title>Photos - Haikel</title>
  </head>
  <body>
    <Layout>
      <Heading as="h1">Photos</Heading>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 grid-rows-1 sm:grid-rows-2 mt-6 gap-4"
      >
        {
          data.photosList.map((item) => (
            <img
              src={`/images/photos/${item.id}.png`}
              alt={item.name}
              class="drop-shadow-md cursor-pointer"
            />
          ))
        }
      </div>
    </Layout>
  </body>
</html>
